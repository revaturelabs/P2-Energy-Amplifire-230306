<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Owner</field>
        <field>Account</field>
        <field>AccountNumber</field>
        <field>ActivatedBy</field>
        <field>ActivatedDate</field>
        <field>BillingAddress</field>
        <field>BillToContact</field>
        <field>CompanyAuthorizedBy</field>
        <field>CompanyAuthorizedDate</field>
        <field>ContractEndDate</field>
        <field>ContractName</field>
        <field>Contract</field>
        <field>CreatedBy</field>
        <field>CustomerAuthorizedBy</field>
        <field>CustomerAuthorizedDate</field>
        <field>Description</field>
        <field>LastModifiedBy</field>
        <field>Opportunity</field>
        <field>TotalAmount</field>
        <field>EndDate</field>
        <field>Name</field>
        <field>OrderReferenceNumber</field>
        <field>EffectiveDate</field>
        <field>Type</field>
        <field>OriginalOrder</field>
        <field>PoDate</field>
        <field>PoNumber</field>
        <field>Pricebook2</field>
        <field>IsReductionOrder</field>
        <field>ShippingAddress</field>
        <field>ShipToContact</field>
        <field>Status</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>One-step approval.</description>
        <label>Expedited</label>
        <name>Expedited</name>
    </approvalStep>
    <description>Approval needed for changing the details of an Order.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Order Update Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
